<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 flex items-center justify-center min-h-screen p-4">
    <div
      class="bg-white/10 backdrop-blur-lg shadow-lg rounded-xl w-full max-w-md p-8 border border-white/20"
    >
      <!-- Header -->
      <h2 class="text-center text-3xl font-bold text-white">Admin Login</h2>
      <p class="text-center text-gray-400 mt-2">
        Enter your credentials to access the admin panel
      </p>

      <!-- Login Form -->
      <form
        id="loginForm"
        action="/admin/login"
        method="POST"
        class="mt-6 space-y-6"
      >
        <!-- Username -->
        <div>
          <label for="username" class="text-sm font-medium text-gray-300"
            >Username</label
          >
          <div class="relative">
            <input
              type="text"
              id="username"
              name="username"
              class="w-full px-4 py-2 border border-gray-600 bg-gray-800 text-white rounded-md focus:ring-blue-500 focus:border-blue-500 pl-10"
              placeholder="Admin Username"
              required
            />
            <span
              class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
              >üîë</span
            >
          </div>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="text-sm font-medium text-gray-300"
            >Password</label
          >
          <div class="relative">
            <input
              type="password"
              id="password"
              name="password"
              class="w-full px-4 py-2 border border-gray-600 bg-gray-800 text-white rounded-md focus:ring-blue-500 focus:border-blue-500 pl-10"
              placeholder="Password"
              required
            />
            <span
              class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
              >üîí</span
            >
            <button
              type="button"
              id="togglePassword"
              class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400"
            >
              üëÅÔ∏è
            </button>
          </div>
        </div>

        <!-- Login Button -->
        <button
          type="submit"
          id="loginButton"
          class="w-full py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition flex justify-center items-center"
        >
          Login
        </button>

        <!-- Error Message -->
        <% if (locals.errorMessage) { %>
        <div class="bg-red-500 text-white px-4 py-2 rounded text-center">
          <span><%= errorMessage %></span>
        </div>
        <% } %>
      </form>
    </div>

    <!-- JavaScript -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const loginForm = document.getElementById("loginForm");
        const passwordInput = document.getElementById("password");
        const togglePasswordBtn = document.getElementById("togglePassword");
        const loginButton = document.getElementById("loginButton");

        // Toggle Password Visibility
        togglePasswordBtn.addEventListener("click", function () {
          passwordInput.type =
            passwordInput.type === "password" ? "text" : "password";
        });

        // Handle form submission via AJAX
     
      });
    </script>
  </body>
</html>
