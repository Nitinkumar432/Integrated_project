<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Settings | Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              sidebar: "#1a1c23",
              "sidebar-hover": "#2d3748",
              primary: { DEFAULT: "#3b82f6", hover: "#2563eb" },
              danger: { DEFAULT: "#ef4444", hover: "#dc2626" },
            },
          },
        },
      };
    </script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white flex flex-col md:flex-row min-h-screen">
    <!-- Sidebar -->
    <aside
      class="w-full md:w-72 bg-sidebar min-h-screen p-6 flex flex-col md:sticky md:top-0 md:h-screen shadow-lg"
    >
      <h2 class="text-2xl font-bold text-white mb-6">⚙️ Admin Panel</h2>
      <nav class="space-y-2 flex-1">
        <a
          href="/admin/dashboard"
          class="flex items-center px-4 py-3 rounded-lg hover:bg-sidebar-hover transition-all"
        >
          <i class="ri-dashboard-line mr-3"></i> Dashboard
        </a>
        <a
          href="/admin/profile"
          class="flex items-center px-4 py-3 rounded-lg hover:bg-sidebar-hover transition-all"
        >
          <i class="ri-user-settings-line mr-3"></i> Profile
        </a>
        <a
          href="/admin/settings"
          class="flex items-center px-4 py-3 bg-primary/20 text-primary border-l-4 border-primary transition-all"
        >
          <i class="ri-settings-3-line mr-3"></i> Settings
        </a>
        <a
          href="/admin/logout"
          class="flex items-center px-4 py-3 bg-danger/20 text-danger rounded-lg hover:bg-danger hover:text-white transition-all"
        >
          <i class="ri-logout-box-line mr-2"></i> Logout
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8">
      <h1 class="text-3xl font-bold">⚙️ Admin Settings</h1>
      <p class="mt-2 text-gray-400">Customize the platform settings.</p>

      <div
        class="bg-gray-800 p-6 rounded-lg mt-6 max-w-2xl shadow-lg space-y-6"
      >
        <!-- Theme Customization -->
        <div>
          <h2 class="text-xl font-bold">Theme Customization</h2>
          <div class="mt-2 flex gap-4">
            <button
              class="px-4 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-600 transition"
              id="lightMode"
            >
              Light Mode
            </button>
            <button
              class="px-4 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-600 transition"
              id="darkMode"
            >
              Dark Mode
            </button>
          </div>
        </div>

        <!-- Notification Settings -->
        <div>
          <h2 class="text-xl font-bold">Notification Settings</h2>
          <div class="mt-2">
            <label class="flex items-center space-x-2">
              <input
                type="checkbox"
                class="form-checkbox text-primary"
                checked
              />
              <span>Email Notifications</span>
            </label>
            <label class="flex items-center space-x-2 mt-2">
              <input
                type="checkbox"
                class="form-checkbox text-primary"
                checked
              />
              <span>Push Notifications</span>
            </label>
          </div>
        </div>

        <!-- User Role Management -->
        <div>
          <h2 class="text-xl font-bold">Manage User Roles</h2>
          <form action="/admin/update-role" method="POST" class="mt-2">
            <label class="block text-sm text-gray-400">Select User:</label>
            <input
              type="text"
              name="username"
              placeholder="Enter Username"
              class="w-full px-4 py-2 bg-gray-700 rounded-md text-white mt-2"
              required
            />
            <label class="block text-sm text-gray-400 mt-2">Assign Role:</label>
            <select
              name="role"
              class="w-full px-4 py-2 bg-gray-700 rounded-md text-white mt-2"
            >
              <option value="admin">Admin</option>
              <option value="moderator">Moderator</option>
              <option value="user">User</option>
            </select>
            <button
              type="submit"
              class="w-full bg-primary text-white py-2 rounded-md hover:bg-primary-hover transition mt-3"
            >
              Update Role
            </button>
          </form>
        </div>

        <!-- Security Settings -->
        <div>
          <h2 class="text-xl font-bold">Security Settings</h2>
          <div class="mt-2">
            <label class="flex items-center space-x-2">
              <input type="checkbox" class="form-checkbox text-primary" />
              <span>Enable Two-Factor Authentication</span>
            </label>
            <label class="flex items-center space-x-2 mt-2">
              <input
                type="number"
                name="sessionTimeout"
                placeholder="Session Timeout (mins)"
                class="w-full px-4 py-2 bg-gray-700 rounded-md text-white mt-2"
              />
            </label>
          </div>
        </div>

        <!-- API Keys & Webhooks -->
        <div>
          <h2 class="text-xl font-bold">API & Webhooks</h2>
          <button
            class="px-4 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-600 transition mt-2"
          >
            Generate API Key
          </button>
          <p class="text-gray-400 mt-2">Manage API access & webhooks here.</p>
        </div>

        <!-- Data Backup & Export -->
        <div>
          <h2 class="text-xl font-bold">Data Backup</h2>
          <button
            class="px-4 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-600 transition mt-2"
          >
            Export User Data
          </button>
          <button
            class="px-4 py-2 bg-danger text-white rounded-md hover:bg-danger-hover transition mt-2"
          >
            Delete Old Logs
          </button>
        </div>
      </div>
    </main>

    <!-- JavaScript -->
    <script>
      document.getElementById("lightMode").addEventListener("click", () => {
        document.body.classList.remove("bg-gray-900");
        document.body.classList.add("bg-white", "text-black");
      });

      document.getElementById("darkMode").addEventListener("click", () => {
        document.body.classList.remove("bg-white", "text-black");
        document.body.classList.add("bg-gray-900", "text-white");
      });
    </script>
  </body>
</html>
