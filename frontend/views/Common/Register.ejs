<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-r from-blue-100 to-purple-100 font-sans">
    <%- include('../Essential/header') %>

    <div class="container mx-auto px-4 py-12 min-h-screen flex items-center justify-center">
        <div class="max-w-3xl w-full bg-white rounded-3xl shadow-2xl overflow-hidden p-10">
            <h1 class="text-5xl font-bold text-gray-900 text-center mb-4">Join Our Community</h1>
            <p class="text-gray-600 text-center mb-8 text-lg">Create your profile and start connecting with opportunities.</p>
            
            <div class="flex justify-center mb-8">
                <div class="bg-gray-200 rounded-full p-1">
                    <button id="seekerToggle" class="px-6 py-2 rounded-full bg-blue-600 text-white font-medium transition duration-300">Job Seeker</button>
                    <button id="providerToggle" class="px-6 py-2 rounded-full text-gray-700 font-medium transition duration-300">Service Provider</button>
                </div>
            </div>

            <form id="seekerForm" class="space-y-8" action="/seeker/register" method="POST">
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
                        <input type="text" id="name" name="name" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Name" required>
                    </div>
                    <div>
                        <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                        <input type="email" id="email" name="email" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Email" required>
                    </div>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="phone" class="block text-gray-700 font-medium mb-2">Phone</label>
                        <input type="tel" id="phone" name="phone" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Phone" required>
                    </div>
                    <div>
                        <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
                        <div class="relative">
                            <input type="password" id="password" name="password" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" required>
                            <button type="button" class="absolute right-3 top-3 text-gray-500" onclick="togglePassword('password')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Confirm Password</label>
                        <div class="relative">
                            <input type="password" id="confirmPassword" name="confirmPassword" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" required>
                            <button type="button" class="absolute right-3 top-3 text-gray-500" onclick="togglePassword('confirmPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div>
                        <label for="age" class="block text-gray-700 font-medium mb-2">Age</label>
                        <input type="number" id="age" name="age" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Age" required>
                    </div>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="gender" class="block text-gray-700 font-medium mb-2">Gender</label>
                        <select id="gender" name="gender" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" required>
                            <option value="">Select Gender</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label for="occupation" class="block text-gray-700 font-medium mb-2">Occupation</label>
                        <input type="text" id="occupation" name="occupation" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Occupation">
                    </div>
                </div>
                <div>
                    <label for="address" class="block text-gray-700 font-medium mb-2">Address</label>
                    <div class="flex">
                        <input type="text" id="address" name="address" class="w-full p-3 border rounded-l-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Address" required>
                        <button type="button" id="locateMe" class="bg-blue-600 text-white px-6 py-3 rounded-r-lg hover:bg-blue-700 transition duration-300">
                            <i class="fas fa-map-marker-alt mr-2"></i> Locate Me
                        </button>
                    </div>
                </div>
                <div class="grid gap-8 md:grid-cols-3">
                <div>
                    <label for="state" class="block text-gray-700 font-medium mb-2">State</label>
                    <input type="text" id="state" name="state" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="State" required>
                </div>
                <div>
                    <label for="city" class="block text-gray-700 font-medium mb-2">City</label>
                    <input type="text" id="city" name="city" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="City" required>
                </div>
                <div>
                    <label for="zipCode" class="block text-gray-700 font-medium mb-2">Zip Code</label>
                    <input type="text" id="zipCode" name="zipCode" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Zip Code" required>
                </div>
            </div>

                <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-lg font-bold text-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105">
                    <i class="fas fa-user-plus mr-2"></i> Register
                </button>
            </form>

            <form id="providerForm" class="space-y-8 hidden">
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="providerName" class="block text-gray-700 font-medium mb-2">Name</label>
                        <input type="text" id="providerName" name="name" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Name" required>
                    </div>
                    <div>
                        <label for="providerEmail" class="block text-gray-700 font-medium mb-2">Email</label>
                        <input type="email" id="providerEmail" name="email" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Email" required>
                    </div>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="providerPhone" class="block text-gray-700 font-medium mb-2">Phone</label>
                        <input type="tel" id="providerPhone" name="phone" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Your Phone" required>
                    </div>
                    <div>
                        <label for="providerPassword" class="block text-gray-700 font-medium mb-2">Password</label>
                        <div class="relative">
                            <input type="password" id="providerPassword" name="password" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" required>
                            <button type="button" class="absolute right-3 top-3 text-gray-500" onclick="togglePassword('providerPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div>
                    <label for="skills" class="block text-gray-700 font-medium mb-2">Skills</label>
                    <input type="text" id="skills" name="skills" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Enter skills separated by commas" required>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="experience" class="block text-gray-700 font-medium mb-2">Years of Experience</label>
                        <input type="number" id="experience" name="experience" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Years of Experience" required>
                    </div>
                    <div>
                        <label for="certifications" class="block text-gray-700 font-medium mb-2">Certifications</label>
                        <input type="text" id="certifications" name="certifications" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Enter certifications separated by commas">
                    </div>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="gstNumber" class="block text-gray-700 font-medium mb-2">GST Number</label>
                        <input type="text" id="gstNumber" name="gstNumber" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="GST Number" required>
                    </div>
                    <div>
                        <label for="governmentProof" class="block text-gray-700 font-medium mb-2">Government Proof</label>
                        <input type="text" id="governmentProof" name="governmentProof" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Aadhaar, License, etc." required>
                    </div>
                </div>
                <div>
                    <label for="serviceLocation" class="block text-gray-700 font-medium mb-2">Service Location</label>
                    <input type="text" id="serviceLocation" name="serviceLocation" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Service Location" required>
                </div>
                <div class="grid gap-8 md:grid-cols-2">
                    <div>
                        <label for="availability" class="block text-gray-700 font-medium mb-2">Availability</label>
                        <select id="availability" name="availability" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" required>
                            <option value="">Select Availability</option>
                            <option value="weekdays">Weekdays</option>
                            <option value="weekends">Weekends</option>
                            <option value="all">All Days</option>
                        </select>
                    </div>
                    <div>
                        <label for="pricingDetails" class="block text-gray-700 font-medium mb-2">Pricing Details</label>
                        <input type="text" id="pricingDetails" name="pricingDetails" class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Pricing model or cost estimate">
                    </div>
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-lg font-bold text-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105">
                    <i class="fas fa-user-plus mr-2"></i> Register as Service Provider
                </button>
            </form>
        </div>
    </div>

    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        document.getElementById('locateMe').addEventListener('click', () => {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(async (position) => {
                try {
                    const response = await fetch(`https://nominatim.openstreetmap.org/reverse?lat=${position.coords.latitude}&lon=${position.coords.longitude}&format=json`);
                    const data = await response.json();

                    if (data && data.address) {
                        let locationName = data.address.suburb || data.address.city_district || data.address.city || data.address.town || data.address.village || data.address.state;
                        let city = data.address.city || data.address.town || data.address.village || '';
                        let state = data.address.state || '';
                        let zipCode = data.address.postcode || '';

                        // Autofill fields while keeping them editable
                        document.getElementById('address').value = locationName;
                        document.getElementById('city').value = city;
                        document.getElementById('state').value = state;
                        document.getElementById('zipCode').value = zipCode;
                    } else {
                        document.getElementById('address').value = 'Location not found';
                        document.getElementById('city').value = '';
                        document.getElementById('state').value = '';
                        document.getElementById('zipCode').value = '';
                    }
                } catch (error) {
                    console.error('Error fetching location:', error);
                    document.getElementById('address').value = 'Error fetching location';
                }
            }, (error) => {
                console.error('Error getting location:', error);
                document.getElementById('address').value = 'Failed to get location';
            }, { enableHighAccuracy: true });
        } else {
            document.getElementById('address').value = 'Geolocation not supported';
        }
    });


        // Toggle between seeker and provider forms
        const seekerToggle = document.getElementById('seekerToggle');
        const providerToggle = document.getElementById('providerToggle');
        const seekerForm = document.getElementById('seekerForm');
        const providerForm = document.getElementById('providerForm');

        seekerToggle.addEventListener('click', () => {
            seekerForm.classList.remove('hidden');
            providerForm.classList.add('hidden');
            seekerToggle.classList.add('bg-blue-600', 'text-white');
            seekerToggle.classList.remove('text-gray-700');
            providerToggle.classList.remove('bg-blue-600', 'text-white');
            providerToggle.classList.add('text-gray-700');
        });

        providerToggle.addEventListener('click', () => {
            seekerForm.classList.add('hidden');
            providerForm.classList.remove('hidden');
            providerToggle.classList.add('bg-blue-600', 'text-white');
            providerToggle.classList.remove('text-gray-700');
            seekerToggle.classList.remove('bg-blue-600', 'text-white');
            seekerToggle.classList.add('text-gray-700');
        });
    </script>
    <%- include('../Essential/footer') %>
</body>
</html>