<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold text-center mb-6">Job Requests</h1>

  <% if (requests.length === 0) { %>
  <p class="text-center text-gray-600">No job requests available.</p>
  <% } else { %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% requests.forEach(request => { %>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-lg font-semibold"><%= request.title %></h2>
      <p class="text-gray-700">
        <strong>Location:</strong> <%= request.location %>
      </p>
      <p class="text-gray-700">
        <strong>Status:</strong> <%= request.status %>
      </p>
      <a
        href="/provider/job/<%= request._id %>"
        class="mt-3 inline-block text-blue-500"
        >View Details</a
      >
    </div>
    <% }); %>
  </div>
  <% } %>
</div>
